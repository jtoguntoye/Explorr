<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/label_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_start_labels"
        android:text="@string/hotel_label"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotels_recyclerView"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_start_labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/label_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hotels_recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_start_labels"
        android:layout_marginTop="@dimen/margin_top_labels"
        android:textStyle="bold"
        tools:text="@string/restaurant_label"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restaurant_recyclerView"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_restaurant"
        android:layout_marginStart="@dimen/margin_start_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/label_attractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_start_labels"
        android:layout_marginTop="@dimen/margin_top_labels"
        android:textStyle="bold"
        tools:text="@string/attractions_label"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attractions_recyclerView"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_attractions"
        android:layout_marginStart="@dimen/margin_start_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>